<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/fondoazul_01"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="2"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:text="Corporacion estrella azul" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="5"
        android:gravity="center">

        <Button
            android:id="@+id/buttonModeradores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_style"
            android:text="@string/moderadores"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/buttonSalas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_style"
            android:text="@string/salas"
            android:textColor="@color/blanco" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="5"
        android:gravity="center">

        <Button
            android:id="@+id/buttonEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_style"
            android:text="@string/eventos"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/buttonSincronizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBotton="15dp"
            android:background="@drawable/btn_style"
            android:text="@string/sincronizar"
            android:textColor="@color/blanco" />
    </TableRow>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"

        android:layout_weight="50"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTextTextUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"

        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/Usu_icon"
        android:drawablePadding="15dp"
        android:background="@drawable/caja_text_style"
        android:layout_marginBottom="15dp"

        />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"

        android:ems="10"
        android:hint="@string/password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/con_icon"
        android:drawablePadding="15dp"
        android:inputType="textPassword"
        android:background="@drawable/caja_text_style"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="5"

        android:text="@string/ingresar"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/btn_style"
        android:textColor="@color/blanco"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
